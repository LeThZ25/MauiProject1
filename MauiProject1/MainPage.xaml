<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProject1.MainPage"
             BackgroundColor="{AppThemeBinding Light=#F2F5F8, Dark=#000000}">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="25" MaximumWidthRequest="450" HorizontalOptions="Center">

            <Grid ColumnDefinitions="*, Auto, Auto" ColumnSpacing="15">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Smart Home Dashboard" 
                           TextColor="{AppThemeBinding Light=#333, Dark=White}" 
                           FontSize="22" FontAttributes="Bold"/>
                    <Label Text="Living Room Overview" 
                           TextColor="{AppThemeBinding Light=Gray, Dark=#999}" 
                           FontSize="14"/>
                </VerticalStackLayout>

                <Label x:Name="ThemeIcon"
                       Grid.Column="1" 
                       Text="🌙" 
                       FontSize="20"
                       VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnThemeSwitchTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label Grid.Column="2" Text="⚙️" FontSize="20" VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
            </Grid>

            <Border StrokeShape="RoundRectangle 25" StrokeThickness="0" Padding="20"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}">
                <Grid ColumnDefinitions="*, Auto">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="28°C" FontSize="45" FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                        <Label Text="Partly Cloudy" TextColor="Gray" FontAttributes="Bold"/>
                        <Label Text="H: 32° L: 24°" TextColor="Gray" FontSize="12"/>
                    </VerticalStackLayout>
                    <Label Grid.Column="1" Text="⛅" FontSize="50" VerticalOptions="Center"/>
                </Grid>
            </Border>

            <Grid RowDefinitions="160, 160" ColumnDefinitions="*, *" RowSpacing="15" ColumnSpacing="15">

                <Border Grid.Row="0" Grid.Column="0" StrokeShape="RoundRectangle 25" StrokeThickness="0" Padding="15"
                        BackgroundColor="{AppThemeBinding Light=#FFF4E6, Dark=#1C1C1E}">
                    <Grid RowDefinitions="Auto, *, Auto, Auto">
                        <Grid Grid.Row="0" ColumnDefinitions="Auto, *">
                            <Border StrokeShape="RoundRectangle 20" HeightRequest="40" WidthRequest="40" StrokeThickness="0"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2E}"
                                    HorizontalOptions="Start">
                                <Label Text="💡" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#FF9800"/>
                            </Border>
                            <Switch Grid.Column="1" IsToggled="True" OnColor="#FF9800" HorizontalOptions="End"/>
                        </Grid>

                        <Label Grid.Row="2" Text="Smart Light" FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                        <Label Grid.Row="3" Text="ON" TextColor="#FF9800" FontSize="13" FontAttributes="Bold"/>
                    </Grid>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" StrokeShape="RoundRectangle 25" StrokeThickness="0" Padding="15"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}">
                    <Grid RowDefinitions="Auto, *, Auto, Auto">
                        <Grid Grid.Row="0" ColumnDefinitions="Auto, *">
                            <Border StrokeShape="RoundRectangle 20" HeightRequest="40" WidthRequest="40" StrokeThickness="0"
                                    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2E}" HorizontalOptions="Start">
                                <Label Text="💨" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Gray"/>
                            </Border>
                            <Switch Grid.Column="1" IsToggled="False" OnColor="#2196F3" HorizontalOptions="End"/>
                        </Grid>

                        <Label Grid.Row="2" Text="Ceiling Fan" FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                        <Label Grid.Row="3" Text="OFF" TextColor="Gray" FontSize="13" FontAttributes="Bold"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" StrokeShape="RoundRectangle 25" StrokeThickness="0" Padding="15"
                        BackgroundColor="{AppThemeBinding Light=#E8F4FB, Dark=#1C1C1E}">
                    <Grid RowDefinitions="Auto, *, Auto, Auto">
                        <Grid Grid.Row="0" ColumnDefinitions="Auto, *">
                            <Border StrokeShape="RoundRectangle 20" HeightRequest="40" WidthRequest="40" StrokeThickness="0"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2E}" HorizontalOptions="Start">
                                <Label Text="❄️" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#2196F3"/>
                            </Border>
                            <Switch Grid.Column="1" IsToggled="True" OnColor="#2196F3" HorizontalOptions="End"/>
                        </Grid>

                        <Label Grid.Row="2" Text="Air Cond" FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                        <Label Grid.Row="3" Text="18°C" TextColor="#2196F3" FontSize="13" FontAttributes="Bold"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" StrokeShape="RoundRectangle 25" StrokeThickness="0" Padding="15"
                        BackgroundColor="{AppThemeBinding Light=#F6E6FF, Dark=#1C1C1E}">
                    <Grid RowDefinitions="Auto, *, Auto, Auto">
                        <Grid Grid.Row="0" ColumnDefinitions="Auto, *">
                            <Border StrokeShape="RoundRectangle 20" HeightRequest="40" WidthRequest="40" StrokeThickness="0"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2E}" HorizontalOptions="Start">
                                <Label Text="🛡️" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#9C27B0"/>
                            </Border>
                            <Switch Grid.Column="1" IsToggled="True" OnColor="#E91E63" ThumbColor="White" HorizontalOptions="End"/>
                        </Grid>

                        <Label Grid.Row="2" Text="Security" FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                        <Label Grid.Row="3" Text="Armed" TextColor="#E91E63" FontSize="13" FontAttributes="Bold"/>
                    </Grid>
                </Border>
            </Grid>

            <Border StrokeShape="RoundRectangle 25" StrokeThickness="0" Padding="20"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <Border BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#2C2C2E}" 
                                StrokeThickness="0" HeightRequest="45" WidthRequest="45" StrokeShape="RoundRectangle 22.5">
                            <Label Text="⚡" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#4CAF50" FontSize="20"/>
                        </Border>

                        <VerticalStackLayout Grid.Column="1" Margin="15,0" VerticalOptions="Center">
                            <Label Text="Energy Usage" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                            <Label Text="Today's Consumption" TextColor="Gray" FontSize="12"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="2" Text="12 kWh" FontAttributes="Bold" FontSize="20" 
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                    </Grid>

                    <Grid ColumnDefinitions="Auto, *, Auto" Margin="0,10,0,0">
                        <Label Text="Usage" TextColor="Gray" FontSize="12"/>
                        <Label Grid.Column="2" Text="65%" TextColor="#4CAF50" FontAttributes="Bold" FontSize="12"/>
                    </Grid>

                    <ProgressBar Progress="0.65" ProgressColor="#4CAF50" ScaleY="3" BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#333}"/>

                    <Label Text="Of daily limit" TextColor="Gray" FontSize="10" HorizontalOptions="End"/>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>